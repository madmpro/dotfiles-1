# Shortcuts: docker
alias d="docker"
alias dp="docker ps"
alias dpa="docker ps -a" # list all containers (all info)
alias dpaq="docker ps -a -q" # list all containers (IDs only)
alias di="docker images"
alias drm="docker rm $(docker ps -aq)"
alias drmi="docker rmi $(docker images -aq)"
alias drit="docker run -it" # run interactively
alias drd="docker run -d -P" # run as daemon
